<div class="categories-container">
    <header class="categories-header">
        <div class="categories-header-content">
            <h1 class="categories-title">
                <i class="fas fa-folder"></i> 分类索引
            </h1>
            <p class="categories-subtitle">浏览所有分类，发现感兴趣的内容</p>
        </div>
    </header>

    <div class="categories-content">
        <div class="categories-grid-full">
            <% 
                const categoryStats = {};
                const categoryPaths = {};
                site.categories.forEach(cat => {
                    categoryStats[cat.name] = cat.length;
                    categoryPaths[cat.name] = cat.path;
                });
            %>
            <% Object.entries(categoryStats).sort((a, b) => b[1] - a[1]).forEach(function([catName, count]) { %>
                <div class="category-card-large">
                    <div class="category-card-header">
                        <h3 class="category-name"><%= catName %></h3>
                        <span class="category-count"><%= count %></span>
                    </div>
                    <p class="category-desc">共 <%= count %> 篇文章</p>
                    <a href="<%= config.root %><%= categoryPaths[catName] %>" class="btn-category">
                        浏览文章 <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            <% }); %>
        </div>

        <div class="categories-detail">
            <h2 class="section-title">分类详情</h2>
            <div class="categories-list">
                <% 
                    const categoryList = [];
                    site.categories.forEach(cat => {
                        categoryList.push({
                            name: cat.name,
                            path: cat.path,
                            posts: cat.posts.toArray()
                        });
                    });
                    categoryList.sort((a, b) => b.posts.length - a.posts.length);
                %>
                <% categoryList.forEach(function(category) { %>
                    <div class="category-section">
                        <h3 class="category-section-title">
                            <i class="fas fa-tag"></i> <%= category.name %>
                            <span class="section-count">(<%= category.posts.length %>)</span>
                        </h3>
                        <div class="posts-in-category">
                            <% category.posts.forEach(function(post) { %>
                                <div class="post-item-in-category">
                                    <a href="<%= config.root %><%= post.path %>" class="post-item-link">
                                        <span class="post-item-title"><%= post.title %></span>
                                        <span class="post-item-date"><%= date(post.date, 'YYYY-MM-DD') %></span>
                                    </a>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<!-- 通知 -->
<div id="categories-notification" class="notification" style="display: none;"></div>

<script>
// 显示通知
function showCategoriesNotification(message, type = 'info') {
    const notification = document.getElementById('categories-notification');
    notification.textContent = message;
    notification.className = 'notification ' + type;
    notification.style.display = 'block';
    
    setTimeout(() => {
        notification.style.display = 'none';
    }, 3000);
}
</script>
